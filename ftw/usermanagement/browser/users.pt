<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.usermanagement">
<body>
    <head>
    <metal:js fill-slot="javascript_head_slot">
        <script type="text/javascript" src="++resource++user_group.js"
                tal:attributes="src string:${portal_url}/++resource++user_group.js"></script>
    </metal:js>
    <metal:css fill-slot="style_slot">
        <link href="++resource++ui.multiselect.css"
              rel="stylesheet"
              type="text/css"
              tal:attributes="href string:$portal_url/++resource++ui.multiselect.css" />
    </metal:css>
    </head>
    
<metal:left fill-slot="column_two_slot" />
<metal:left fill-slot="column_one_slot" />

<metal:content-core fill-slot="main">
    <metal:content-core define-macro="main">

        <h1 i18n:translate="">User Management</h1>

        <fieldset>
            <legend i18n:translate="">Add a new Member</legend>
            <div class="helpDescription" i18n:translate="help_add_member">
                If no password is provided, plone will generate one for you
            </div>
            <form name="add_member_form" method="POST" 
                  tal:attributes="action string: ./user_management/validate_registration">
                <table class="addusertable">
                    <tr>
                        <th i18n:translate="">Firstname</th>
                        <th i18n:translate="">Lastname</th>
                        <th i18n:translate="">Email</th>
                        <th i18n:translate="">Password</th>
                        <th>&nbsp;</th>
                    </tr>
                    <tr>
                        <td><input type="text" name="firstname" tal:attributes="value context/REQUEST/firstname|nothing"/></td>
                        <td><input type="text" name="lastname" tal:attributes="value context/REQUEST/lastname|nothing"/></td>
                        <td><input type="text" name="email" tal:attributes="value context/REQUEST/email|nothing"/></td>
                        <td><input type="text" name="password" /></td>
                        <td><input type="submit" name="add" value="Add member" i18n:attributes="value" /></td>
                    </tr>
                </table>
                <input tal:replace="structure context/@@authenticator/authenticator" /> 
            </form>
        </fieldset>
        <tal:block content="structure provider:ftw.usermanagement.befortablemanager" />

        <form action="./user_management" method="POST">
            <div id="usertable" tal:content="structure view/render_table">table</div>
        
        <div class="formControls">
            <input tal:replace="structure context/@@authenticator/authenticator" /> 
            <input type="submit" name="notify.users" value="Notify user" i18n:attributes="value" />
            <input type="submit" name="notify.users.password" value="Notify user and reset password" i18n:attributes="value" />
            <input class="allowMultiSubmit" type="submit" name="delete.user" value="Delete user" i18n:attributes="value" />
        </div>
        </form>
    </metal:content-core>
</metal:content-core>

</body>
</html>